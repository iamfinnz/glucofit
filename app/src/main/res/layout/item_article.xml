<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvListMain"
    android:layout_width="140dp"
    android:layout_height="205dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="18sp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:padding="5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgArticle"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="@dimen/small_50"
            android:layout_marginEnd="@dimen/small_50"
            android:layout_marginTop="@dimen/small_50"
            android:layout_marginBottom="@dimen/small_50"
            tools:srcCompat="@drawable/dummy_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvJudulArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/default_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/see_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_100"
            android:layout_marginEnd="@dimen/small_50"
            android:layout_marginBottom="@dimen/small_50"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="right"
            android:textColor="@color/colorPrimary"
            android:text="@string/see_more"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>